SELECT ISSUES.SUMMARY, ISSUES.DESCRIPTIONOFISSUES, ISSUESLISTS.NAME
FROM ISSUES ISSUES
         JOIN ISSUESLISTS ISSUESLISTS ON ISSUES.ISSUESLIST_ID = ISSUESLISTS.ID;


SELECT ISSUES.SUMMARY, ISSUES.DESCRIPTIONOFISSUES, USERS.FIRSTNAME, USERS.LASTNAME
FROM ISSUES ISSUES
         JOIN USERS USERS ON ISSUES.ISSUESLIST_ID = USERS.ID;


SELECT USERS.FIRSTNAME, USERS.LASTNAME, COUNT(*) AS TASK_NUMBER
FROM USERS USERS
         JOIN ISSUES ISSUES ON USERS.ID = ISSUES.USER_ID_ASSIGNEDTO
GROUP BY USER_ID_ASSIGNEDTO;